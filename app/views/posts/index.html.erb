<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<div class="row">
  <% @posts.each do |post| %>
  <div class="col-md-4">
    <div class="card-group">
    <div class="card">
      <%= link_to image_tag(post.featureimage_url, class: 'card-img-top'),post if post.featureimage.present? %>
      <div class="card-body">
        <h5 class="card-title"><%= link_to post.title, post %></h5>
        <p class="card-text"><%= sanitize(truncate(post.content, length: 50)) + "[..]" %></p>
        <p class="card-text"><small class="text-muted"><%= post.created_at.strftime("%b %d") %></small></p>
        
      </div>
    </div>
  </div>
 </div>
 <% end %> 
</div>

