<div class="row">
  <div class="col-md-3"></div>
  
  <div class="col-md-6">
    <h2 style="text-align: center;"><%= @user.firstname + ' ' + @user.lastname %></h2>
    <p style="text-align: center;"><i><%= @user.userbio %></i></p>
    
    <hr>

    <div id="myposts">
    
    <h2>My Posts</h2>
    
    <% @user.posts.each do |post| %>
    
    <h5 class="card-title"><%= link_to post.title, post %></h5>
    
    <% end %>
    
      
    </div>
    
    
  </div>
  
  <div class="col-md-3"></div>
</div>